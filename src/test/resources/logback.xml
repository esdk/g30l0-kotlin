<configuration>
    <property name="baseDir" value="logs"/>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%-5level %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="FILE-AUDIT" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${baseDir}/transDev.log</file>
        <encoder>
            <pattern>%d{YYYY-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <!-- rollover daily -->
            <fileNamePattern>transDev-%d{yyyy-MM-dd}.%i.txt</fileNamePattern>
            <!-- each file should be at most 100MB, keep 60 days worth of history, but at most 2GB -->
            <maxFileSize>100MB</maxFileSize>
            <maxHistory>60</maxHistory>
            <totalSizeCap>2GB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <root level="trace">
<!--        <appender-ref ref="STDOUT"/>-->
        <appender-ref ref="FILE-AUDIT"/>
    </root>

    <!-- Send logs to both console and file audit -->
    <logger name="de.abas" level="DEBUG" additivity="false">
        <appender-ref ref="STDOUT"/>
<!--        <appender-ref ref="FILE-AUDIT"/>-->
    </logger>

    <logger name="de.abas." level="DEBUG"/>
</configuration>
